<UserControl x:Class="Anderson.Views.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Anderson.Views"
             xmlns:vm="clr-namespace:Anderson.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <vm:ListToTextConverter x:Key="conv" />
    </UserControl.Resources>

    <Grid>
        <Button Content="Log out" Command="{Binding Path=LogoutButton_Clicked}" HorizontalAlignment="Left" Margin="715,10,0,0" VerticalAlignment="Top" Width="75"/>
        <ScrollViewer HorizontalAlignment="Left" Height="278" Margin="192,45,0,0" VerticalAlignment="Top" Width="485">
            <RichTextBox Margin="0,0">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="{Binding Path=CurrentRoomText, Converter={StaticResource conv}}"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </ScrollViewer>
        <ListBox ItemsSource="{Binding Path=AllRooms}" SelectedItem="{Binding Path=CurrentRoom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="344" Margin="21,45,0,0" VerticalAlignment="Top" Width="100">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=HumanReadableName}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBox Text="{Binding Path=SendMessageText, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" HorizontalAlignment="Left" Height="42" Margin="192,344,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="431">
            <TextBox.InputBindings>
                <KeyBinding Key="Return" Modifiers="Shift" Command="{Binding Path=Message_Sent}" />
            </TextBox.InputBindings>
        </TextBox>
        <Button Content="Send" Command="{Binding Path=Message_Sent}" HorizontalAlignment="Left" Margin="628,344,0,0" VerticalAlignment="Top" Width="49" Height="42"/>
    </Grid>

</UserControl>
